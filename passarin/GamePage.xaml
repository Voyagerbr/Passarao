<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="passarin.GamePage"
             Shell.NavBarIsVisible="False">

    <Grid>
        <Image Source="fundo.png"
               x:Name="Fundo"
               Aspect="Fill"/>

        <Image Source="corvo.png"
               x:Name="Passaro"
               VerticalOptions="Center"
               HorizontalOptions="Start"
               HeightRequest="70"/>

        <Image Source="prediocima.png"
               x:Name="PredioCima"
               HorizontalOptions="Center"
               HeightRequest="375"
               VerticalOptions="Start"/>
        <VerticalStackLayout VerticalOptions="End">
            <Image Source="prediobaixo.png"
                   x:Name="PredioBaixo"
                   HorizontalOptions="Center"
                   HeightRequest="375"
                   VerticalOptions="End"/>

            <Image Source="chao.png"
                   x:Name="Chao"
                   VerticalOptions="End"/>
        </VerticalStackLayout>

<Frame x:Name="GameOverFrame"
BackgroundColor="#99000000"
HorizontalOptions="Fill"
VerticalOptions="Fill"
CornerRadius="0">

<Frame.GestureRecognizers>
 <TapGestureRecognizer Tapped="Ai"/>
</Frame.GestureRecognizers>

<Image Source="gameover.png"/>

</Frame>


    </Grid>

</ContentPage>